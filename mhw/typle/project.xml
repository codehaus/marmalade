<?xml version="1.0" encoding="ISO-8859-1"?>

<project>
  <pomVersion>3</pomVersion>

  <groupId>typle</groupId>
  <artifactId>typle</artifactId>
  <id>typle</id>
  <name>typle</name>
  <currentVersion>0.1</currentVersion>

  <organization>
    <name>The Codehaus</name>
    <url>http://codehaus.org/</url>
    <logo>http://codehaus.org/codehaus-small.gif</logo>
  </organization>

  <inceptionYear>2003</inceptionYear>
  <package>org.codehaus.typle</package>
  <logo>/images/typle-logo.png</logo>

  <shortDescription>
    Data model for type representation, and associated tools.
  </shortDescription>

  <repository>
    <connection>scm:cvs:pserver:anonymous@cvs.codehaus.org:/scm/cvspublic:outhaus/mhw/typle</connection>
  </repository>

  <dependencies>
  </dependencies>

  <developers>
   <developer>
      <name>Mark H. Wilkinson</name>
      <id>mhw</id>
      <email>mhw@kremvax.net</email>
      <roles>
        <role>project lead</role>
      </roles>
    </developer>
  </developers>

  <build>
    <nagEmailAddress>mhw@kremvax.net</nagEmailAddress>
    <sourceDirectory>src/java/main</sourceDirectory>
    <unitTestSourceDirectory>src/java/test</unitTestSourceDirectory>

    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
        <exclude>**/AbstractTypleTest.java</exclude>
      </excludes>

      <resources>
        <resource>
          <directory>src/test-input</directory>
          <includes>
            <include>**/*.xml</include>
          </includes>
        </resource>
      </resources>

      <resources>
        <resource>
          <directory>src/java/test</directory>
          <includes>
            <include>org/codehaus/typle/test/**/*.java</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
  </build>

  <reports>
    <report>maven-jdepend-plugin</report>
    <report>maven-checkstyle-plugin</report>
    <report>maven-jcoverage-plugin</report>
    <report>maven-changes-plugin</report>
    <report>maven-changelog-plugin</report>
    <report>maven-developer-activity-plugin</report>
    <report>maven-file-activity-plugin</report>
    <report>maven-license-plugin</report>
    <report>maven-javadoc-plugin</report>
    <report>maven-jxr-plugin</report>
    <report>maven-junit-report-plugin</report>
  </reports>
</project>
